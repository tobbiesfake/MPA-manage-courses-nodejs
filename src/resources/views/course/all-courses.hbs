<div class="row m-0">
  {{#each courses}}
    <div class="mt-4 col col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="">{{this.price}}$</p>
          <iframe width="100%" height="240" src="https://www.youtube.com/embed/{{this.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          <a href="/courses/{{this.slug}}" class="btn btn-primary">Go to course</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
